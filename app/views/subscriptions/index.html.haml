.content-header
  %nav
    = link_to t('text.edit'), new_student_subscription_bulk_updates_path(@student), class: 'btn btn-primary-outline btn-sm'
    = link_to t('text.back'), students_path, class: 'btn btn-secondary btn-sm'
  %h2= title t('.title', name: @student.name)

= render 'students/show_nav', active: 'subscriptions'

%table.table.table-striped
  %thead
    %tr
      %th= Classroom.model_name.human count: 2
      %th= t '.start_at'

  %tbody
  - @subscriptions.each do |subscription|
    %tr
      %td= subscription.classroom.name
      %td= subscription.schedule.abbr_week_day_with_start_at
