.content-header
  %nav= link_to t('text.new'), new_plan_path, class: 'btn btn-primary-outline btn-sm'
  %h2= title

= display_when_present @plans do
  %table.table.table-striped
    %thead
      %tr
        %th= Plan.human_attribute_name :name
        %th.text-xs-right= Plan.human_attribute_name :amount
        %th

    %tbody= render @plans
