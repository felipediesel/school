<p id="notice"><%= notice %></p>

<h1>Listing Classrooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Modality</th>
      <th>Teacher</th>
      <th>Room</th>
      <th>Day of week</th>
      <th>Start at</th>
      <th>Duration</th>
      <th>Personal</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name %></td>
        <td><%= classroom.modality %></td>
        <td><%= classroom.teacher %></td>
        <td><%= classroom.room %></td>
        <td><%= classroom.day_of_week %></td>
        <td><%= classroom.start_at %></td>
        <td><%= classroom.duration %></td>
        <td><%= classroom.personal %></td>
        <td><%= classroom.comment %></td>
        <td><%= link_to 'Show', classroom %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

