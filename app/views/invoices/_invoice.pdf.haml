= show_for @student do |s|
  = s.attribute :name
.row
  .col-4
    .wrapper
      %dt Parcela
      %dd.content= "#{i+1}/#{@invoice_options[:months]}"
  .col-4
    .wrapper
      %dt Vencimento
      %dd.content= l @invoice_options[:first_month] + i.months + @invoice_options[:day] - 1
  .col-4
    .wrapper
      %dt Valor da Parcela
      %dd.content= number_to_currency @student.plans.collect(&:total_amount).sum
.row
  .col-4
    .wrapper
      %dt Desconto
      %dd.content &nbsp;
  .col-4
    .wrapper
      %dt Juros / Multa
      %dd.content &nbsp;
  .col-4
    .wrapper
      %dt Valor Recebido
      %dd.content &nbsp;
- if @invoice_options[:comment].present?
  .wrapper
    %dt Observação
    %dd.content= html_escape(@invoice_options[:comment]).gsub("\n", "<br>").html_safe
