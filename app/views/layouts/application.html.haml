!!!
%html
  %head
    %meta{ charset: "utf-8" }
    %meta{ 'http-equiv' => "X-UA-Compatible", content: "IE=edge" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1, shrink-to-fit=no" }
    %title
      = Option.get(:app_name, 'School')
      = " - #{show_title}" if show_title.present?
    = stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': true
    = javascript_pack_tag 'application', 'data-turbolinks-track': true
    = csrf_meta_tags

  %body{ id: controller_name, class: action_name }
    %nav{ class: "navbar navbar-toggleable-md navbar-inverse #{Option.get(:navbar_background, 'bg-primary')}" }
      %button.navbar-toggler.navbar-toggler-right{ type: "button", data: { toggle: "collapse", target: "#main-nav" } }
        %span.navbar-toggler-icon

      .container
        = link_to Option.get(:app_name, 'School'), root_url, class: 'navbar-brand'
        %ul.navbar-nav.ml-auto
          %li.nav-item.navbar-text.mr-md-3= current_user.name
          %li.nav-item= link_to t('text.sign_out'), destroy_user_session_path, method: :delete, class: 'nav-link'

    #container.container
      .row
        .col-sm-4.col-lg-2
          = render 'layouts/nav'
        #content.col-sm-8.col-lg-10
          = show_flash
          = show_errors

          = yield
